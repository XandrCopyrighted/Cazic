{
  "build": {
    "devPath": "src_html",
    "distDir": "src_html",
    "withGlobalTauri": true
  },
  "package": {
    "productName": "Cazic",
    "version": "0.0.7"
  },
  "tauri": {
    "systemTray": {
      "iconPath": "assets/app-icon/128x128.png"
    },
    "allowlist": {
      "all": false,
      "notification": {
        "all": true
      }
    },
    "bundle": {
      "active": true,
      "targets": "all",
      "identifier": "com.xdr.cazic",
      "category": "Music",
      "shortDescription": "Another music player written in Rust.",
      "icon": [
        "assets/app-icon/32x32.png",
        "assets/app-icon/128x128.png",
        "assets/app-icon/128x128@2x.png",
        "assets/app-icon/icon.icns",
        "assets/app-icon/icon.ico"
      ]
    },
    "security": {
      "csp": null
    },
    "windows": [
      {
        "fullscreen": false,
        "resizable": true,
        "title": "Cazic Music Player",
        "minWidth": 640,
        "minHeight": 480,
        "center": true
      }
    ]
  }
}
