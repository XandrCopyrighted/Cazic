{
  "build": {
    "devPath": "http://localhost:5500/src_frontend",
    "distDir": "src_frontend",
    "withGlobalTauri": true
  },
  "package": {
    "productName": "Cazic",
    "version": "0.0.8"
  },
  "tauri": {
    "systemTray": {
      "iconPath": "icons/128x128.png"
    },
    "bundle": {
      "active": true,
      "targets": "all",
      "identifier": "com.xdr.cazic",
      "category": "Music",
      "shortDescription": "Another music player created with Tauri!",
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/256x256.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ]
    },
    "security": {
      "csp": null
    },
    "windows": [
      {
        "fullscreen": true,
        "resizable": true,
        "title": "Cazic Music Player",
        "minWidth": 640,
        "minHeight": 480,
        "center": true
      }
    ]
  }
}
